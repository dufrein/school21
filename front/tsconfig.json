{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@features": ["src/features"],
      "@features/*": ["src/features/*"],
      "@context": ["src/context"],
      "@context/*": ["src/context/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@helpers": ["src/helpers"],
      "@helpers/*": ["src/helpers/*"],
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@constants": ["src/constants"],
      "@actions": ["src/actions"],
      "@actions/*": ["src/actions/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/utils/session"],
  "exclude": ["node_modules/"]
}
